import streamlit as st
from langchain.prompts import PromptTemplate
from langchain.llms import CTransformers

## function to get response from Llama 2   model

def Llamaresponse(input_text,no_words,blog_style):
    ## llama model

    llm = CTransformers(model='models\llama-2-7b-chat.ggmlv3.q8_0.bin',
                 model_type='Llama',config={'max_new_tokens':256,'temperature':0.01})
    ## prompt templte
    template=""" 
         Write blog for {blog_style} job profile for a topic {input_text} within {no_words} words. 
              """
    prompt=PromptTemplate(input_variables=["blog_style","input_text","no_words"],template=template)

    ## generate the response from llama model
    response=llm(prompt.format(blog_style=blog_style,input_text=input_text,no_words=no_words))
    print(response)
    return response
st.set_page_config(page_title="Generative Blogs",
                   page_icon='ðŸ‘½',layout='centered',initial_sidebar_state='collapsed')


st.header("Generativde blogs ðŸ‘½")

input_text=st.text_input("Enter the blog topic")

## ctreating two or columns for additional 2 fields 

col1,col2=st.columns([5,5])

with col1:
    no_words=st.text_input('No of words')
with col2:
    blog_style=st.selectbox('WRting the blog for',('Researchers','Data Scientist','Common people'),index=0 )


submit=st.button("Generate")

##Final reponse
if submit:
    st.write(Llamaresponse(input_text,no_words,blog_style))
